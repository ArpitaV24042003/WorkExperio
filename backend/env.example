SECRET_KEY=change_me_development_secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Persistent local development database (on-disk, not in-memory)
# Override in production with a proper PostgreSQL DATABASE_URL
DATABASE_URL=sqlite:///./dev.db

ENV=development
ALLOW_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
LOG_LEVEL=INFO

# OpenAI API Key for AI Assistant features
# Get your API key from: https://platform.openai.com/api-keys
# Add billing/credits at: https://platform.openai.com/account/billing
OPENAI_API_KEY=your_openai_api_key_here
# Alternative: You can also use OPENAI_API_KEY_WORKEXPERIO instead
# OPENAI_API_KEY_WORKEXPERIO=your_alternative_key_here

# Optional: Specify which OpenAI model to use (default: gpt-4o-mini)
# OPENAI_MODEL=gpt-4o-mini

